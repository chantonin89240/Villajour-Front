@page "/AddAnnouncementMairie"
@using Radzen
@using Radzen.Blazor
@using VillajourFrontend.Dto.Announcement

<RadzenTemplateForm TItem="AddAnnouncementDto" Data="@newAnnouncement" Submit="@HandleValidSubmit">
    <RadzenRow Gap="0">
        <RadzenColumn Size="12" SizeLG="6" Class="rz-p-4 product-title">
            <RadzenTextBox @bind-Value="@newAnnouncement.Title" Label="Titre" Placeholder="Titre de l'annonce" Required="true" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeLG="6" Class="rz-p-4">
            <RadzenDropDown @bind-Value=@newAnnouncement.AnnouncementTypeId TValue="int" Data=@announcementTypeList TextProperty="Libelle" ValueProperty="Id" Required="true" />
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow Gap="0">
        <RadzenColumn Size="12" SizeLG="12" Class="rz-p-4">
            <RadzenTextArea @bind-Value="@newAnnouncement.Description" Label="Description" Placeholder="Description de l'événement" Rows="4" class="addDescription" />
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow Gap="0">
        <RadzenColumn Size="12" SizeLG="12" Class="rz-p-4">
            <RadzenButton Text="Ajouter" Type="submit" ButtonStyle="ButtonStyle.Primary" />
        </RadzenColumn>
    </RadzenRow>
</RadzenTemplateForm>

