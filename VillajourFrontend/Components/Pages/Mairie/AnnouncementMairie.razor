@page "/AnnouncementMairie"
@inherits ComponentBase
@using VillajourFrontend.Entity
@using Radzen
@using Radzen.Blazor

<h3>Annonces</h3>

<RadzenDataList Data="@models" TItem="Announcement" PageSize="10">
    <Template Context="announcement">
        <div class="row mb-3">
            <div class="col-md-9">
                <h4>@announcement.Title</h4>
                <p>@announcement.Description</p>
                <p><em>@announcement.Date.ToShortDateString()</em></p>
            </div>
            <div class="col-md-3 text-end">
                <RadzenButton Icon="delete" Text="Supprimer" Click="@(() => DeleteAnnouncement(announcement.Id))" ButtonStyle="ButtonStyle.Danger" />
                <RadzenButton Icon="info" Text="Voir détails" Click="@(() => ViewDetails(announcement.Id))" />
            </div>
        </div>
        <hr />
    </Template>
</RadzenDataList>

<RadzenButton Text="Nouvelle annonce" Click="AddAnnouncement" Class="adjust-btn" />

<style>

    body {
        font-family: Arial, sans-serif;
    }

    .row {
        display: flex;
        align-items: center;
    }

    .col-md-1 {
        flex: 0 0 auto;
        width: 50px;
        text-align: center;
    }

    .col-md-9 {
        flex: 1 1 auto;
        padding: 0 15px;
    }

    .col-md-2 {
        flex: 0 0 auto;
        width: 150px;
    }

    .text-end {
        text-align: right;
    }

    hr {
        border: 0;
        border-top: 1px solid #ddd;
        margin: 10px 0;
    }

    .mb-3 {
        margin-bottom: 1rem !important;
    }

</style>