@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@using VillajourFrontend.Components.Pages.Users;
@using VillajourFrontend.Components.Pages.Mairie;

@inject IHttpContextAccessor context

@if (@context.HttpContext.User.IsInRole("user"))
{
    <HomeUser />
}
else if (@context.HttpContext.User.IsInRole("mairie"))
{
    <HomeMairie />
}
